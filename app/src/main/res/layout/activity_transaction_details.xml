            <TextView android:ellipsize="end"
                android:id="@+id/txtAirtime"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_173pxh"
                android:layout_weight="0.29" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{transactionDetailsVM.transactionDetailsModel.txtAirtime}"
                style="@style/txtPoppinsregular12" tools:text="@string/lbl_airtime"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearRowpaymentmethod"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_22pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtPaymentMethod"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.68" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{transactionDetailsVM.transactionDetailsModel.txtPaymentMethod}"
                style="@style/txtPoppinsregular12_3" tools:text="@string/lbl_payment_method"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtBalance"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_168pxh"
                android:layout_weight="0.32" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{transactionDetailsVM.transactionDetailsModel.txtBalance}"
                style="@style/txtPoppinsregular12" tools:text="@string/lbl_balance"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearRowtransactionnum"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_22pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtTransactionNum"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_weight="0.47" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{transactionDetailsVM.transactionDetailsModel.txtTransactionNum}"
                style="@style/txtPoppinsregular12_3" tools:text="@string/msg_transaction_num"/>
            <LinearLayout android:id="@+id/linearRow856709851267431"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginEnd="@dimen/_2pxh"
                android:layout_marginStart="@dimen/_56pxh"

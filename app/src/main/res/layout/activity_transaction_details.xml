                    tools:ignore="ContentDescription" tools:src="@drawable/img_thumbsup_purple_500"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearRowtransactiondat"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_23pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtTransactionDat"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_weight="0.56" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{transactionDetailsVM.transactionDetailsModel.txtTransactionDat}"
                style="@style/txtPoppinsregular12_3" tools:text="@string/msg_transaction_dat"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtLanguage"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_137pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.44" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{transactionDetailsVM.transactionDetailsModel.txtLanguage}"
                style="@style/txtPoppinsregular12" tools:text="@string/lbl_12th_jan_2024"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearRowtransactiontim"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_22pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtTransactionTim"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_weight="0.68" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{transactionDetailsVM.transactionDetailsModel.txtTransactionTim}"
                style="@style/txtPoppinsregular12_3" tools:text="@string/msg_transaction_tim"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txt122033"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_168pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.32" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{transactionDetailsVM.transactionDetailsModel.txt122033}"
                style="@style/txtPoppinsregular12" tools:text="@string/lbl_12_20_33"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/btnShareReceipt"
            android:layout_height="@dimen/_38pxv"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_72pxh"
            android:layout_marginStart="@dimen/_72pxh"
            android:layout_marginTop="@dimen/_77pxv"
            android:layout_width="@dimen/_164pxh"
            android:paddingBottom="@dimen/_10pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_10pxv" android:singleLine="true"
            android:text="@string/lbl_share_receipt"
            android:textAllCaps="false" style="@style/btnSolidRounded_3" tools:text="@string/lbl_share_receipt"/>
    </LinearLayout>
</layout>
